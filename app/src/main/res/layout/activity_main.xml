    <Button
        android:id="@+id/btnRelatorios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnProdutos"
        android:layout_alignStart="@+id/btnProdutos"
        android:layout_below="@+id/btnClientes"
        android:layout_marginTop="15dp"
        android:text="RelatÃ³rios" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btnRelatorios"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:id="@+id/ddlClientes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.73" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="Button" />
